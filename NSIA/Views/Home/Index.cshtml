@{
    ViewData["Title"] = "صفحه اصلی";
}
    <!-- Hero Section -->
    <section class="hero text-center">
        <div class="container">
            <h1 class="display-4 fw-bold">سیستم آنلاین تذکره افغانستان</h1>
            <p class="lead mt-3">دسترسی آسان، سریع و امن به اطلاعات تذکره شما در هر زمان و مکان</p>
            <a href="#register" class="btn btn-primary btn-lg mt-4">ثبت نام / ورود</a>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section bg-white text-center">
        <div class="container">
            <h2 class="mb-4">درباره سیستم</h2>
            <p class="lead">این سیستم برای آسان‌سازی فرآیند ثبت، مشاهده و مدیریت تذکره‌های شهروندان افغانستان طراحی شده است. با استفاده از این پلتفرم می‌توانید به صورت آنلاین تذکره خود را مدیریت کنید و از خدمات مرتبط بهره‌مند شوید.</p>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="section bg-light text-center">
        <div class="container">
            <h2 class="mb-5">ویژگی‌ها</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">دسترسی سریع</h5>
                            <p class="card-text">با ورود به حساب کاربری خود می‌توانید به سرعت به اطلاعات تذکره دسترسی داشته باشید.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">امنیت بالا</h5>
                            <p class="card-text">تمام اطلاعات با پروتکل‌های امن ذخیره می‌شوند و حفاظت از حریم خصوصی شما تضمین می‌شود.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">پشتیبانی ۲۴/۷</h5>
                            <p class="card-text">تیم پشتیبانی ما همیشه آماده پاسخگویی به سوالات و مشکلات شماست.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section bg-white text-center">
        <div class="container">
            <h2 class="mb-4">تماس با ما</h2>
            <p class="mb-4">برای اطلاعات بیشتر یا پشتیبانی، لطفاً از طریق فرم زیر با ما تماس بگیرید:</p>
            <form class="row g-3 justify-content-center">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="نام و نام خانوادگی" required>
                </div>
                <div class="col-md-4">
                    <input type="email" class="form-control" placeholder="ایمیل" required>
                </div>
                <div class="col-8">
                    <textarea class="form-control" rows="4" placeholder="پیام شما"></textarea>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg">ارسال پیام</button>
                </div>
            </form>
        </div>
    </section>