@model NID.ViewModel.EditUserViewModel
@{
    ViewData["Title"] = "ویرایش کاربر";
}

<div class="dashboard-container">
    <!-- Header Section -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">ویرایش اطلاعات کاربر</h1>
            <p class="page-subtitle">به‌روزرسانی اطلاعات و تنظیمات دسترسی کاربر</p>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="registration-card">
        <div class="row">
            <!-- Form Section -->
            <div class="col-lg-8">
                <form asp-action="Edit" method="post" novalidate class="needs-validation">
                    <input type="hidden" asp-for="Id" />

                    <div class="section-card mb-4">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="bi bi-person-badge"></i>
                            </div>
                            <h3 class="section-title">اطلاعات کاربر</h3>
                        </div>

                        <div class="form-grid">
                            <div class="form-group">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="bi bi-person"></i>
                                    نام
                                    <span class="required-star">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="نام کاربر" />
                                <span asp-validation-for="FirstName" class="validation-message"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName" class="form-label">
                                    <i class="bi bi-person"></i>
                                    نام خانوادگی
                                    <span class="required-star">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی کاربر" />
                                <span asp-validation-for="LastName" class="validation-message"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i>
                                آدرس ایمیل
                                <span class="required-star">*</span>
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="example@domain.com" />
                            <span asp-validation-for="Email" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="section-card mb-4">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="bi bi-key"></i>
                            </div>
                            <h3 class="section-title">تغییر رمز عبور</h3>
                            <span class="badge bg-warning text-dark">اختیاری</span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            در صورت تمایل به تغییر رمز عبور کاربر، فیلدهای زیر را پر کنید. در غیر این صورت، رمز عبور قبلی حفظ خواهد شد.
                        </div>

                        <div class="form-grid">
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-key"></i>
                                    رمز عبور جدید
                                </label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="رمز عبور جدید (اختیاری)" />
                                <span asp-validation-for="Password" class="validation-message"></span>
                                <div class="help-text">
                                    <small>در صورت تغییر، رمز عبور باید حداقل 6 کاراکتر باشد</small>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="bi bi-key-fill"></i>
                                    تأیید رمز عبور جدید
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="تکرار رمز عبور جدید" />
                                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                            </div>
                        </div>
                    </div>

                    <div class="section-card mb-4">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="bi bi-person-gear"></i>
                            </div>
                            <h3 class="section-title">سطوح دسترسی</h3>
                        </div>

                        <div class="form-group">
                            <label asp-for="Role" class="form-label">
                                <i class="bi bi-award"></i>
                                نقش کاربری
                                <span class="required-star">*</span>
                            </label>
                            <select asp-for="Role" class="form-control">
                                <option value="User">👤 کاربر عادی</option>
                                <option value="Admin">🛡️ مدیر سیستم</option>
                            </select>
                            <span asp-validation-for="Role" class="validation-message"></span>
                            
                            <div class="role-descriptions mt-3">
                                <div class="role-info role-user @(Model.Role == "User" ? "active" : "")">
                                    <h6><i class="bi bi-person"></i> کاربر عادی</h6>
                                    <p>دسترسی به امکانات پایه سیستم - مشاهده و مدیریت اطلاعات معمول</p>
                                </div>
                                <div class="role-info role-admin @(Model.Role == "Admin" ? "active" : "")">
                                    <h6><i class="bi bi-shield-check"></i> مدیر سیستم</h6>
                                    <p>دسترسی کامل به تمام بخش‌های سیستم - مدیریت کاربران و تنظیمات</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="submit-btn">
                            <i class="bi bi-check-lg"></i>
                            ذخیره تغییرات
                        </button>
                        <a href="@Url.Action("Index", "User")" class="btn-outline-custom">
                            <i class="bi bi-arrow-right"></i>
                            انصراف و بازگشت
                        </a>
                    </div>
                </form>
            </div>

            <!-- Help Section -->
            <div class="col-lg-4">
                <div class="help-section">
                    <div class="user-summary-card">
                        <div class="user-avatar-large">
                            @* @if (!string.IsNullOrEmpty(Model.ProfileImage)) *@
                            @* { *@
                            @*     <img src="@Model.ProfileImage" alt="@Model.FirstName" class="avatar-img-large" /> *@
                            @* } *@
                            @* else *@
                            @* { *@
                                <div class="avatar-placeholder-large">
                                    <i class="bi bi-person"></i>
                                </div>
                            @* } *@
                        </div>
                        <h4>@Model.FirstName @Model.LastName</h4>
                        <div class="user-details-summary">
                            <div class="detail-item">
                                <i class="bi bi-envelope"></i>
                                <span>@Model.Email</span>
                            </div>
                            <div class="detail-item">
                                <i class="bi bi-award"></i>
                                <span class="role-badge-summary @(Model.Role?.ToLower() == "admin" ? "role-admin" : "role-user")">
                                    @Model.Role
                                </span>
                            </div>
                            <div class="detail-item">
                                <i class="bi bi-calendar"></i>
                                <span>آخرین ویرایش: @DateTime.Now.ToShortDateString()</span>
                            </div>
                        </div>
                    </div>

                    <div class="help-card">
                        <div class="help-icon">
                            <i class="bi bi-pencil-square"></i>
                        </div>
                        <h4>راهنمای ویرایش</h4>
                        <ul class="help-list">
                            <li>
                                <i class="bi bi-check-circle"></i>
                                تغییرات پس از ذخیره بلافاصله اعمال می‌شوند
                            </li>
                            <li>
                                <i class="bi bi-check-circle"></i>
                                تغییر رمز عبور اختیاری است
                            </li>
                            <li>
                                <i class="bi bi-check-circle"></i>
                                در صورت تغییر نقش، دسترسی‌ها به‌روز می‌شوند
                            </li>
                            <li>
                                <i class="bi bi-check-circle"></i>
                                کاربر از تغییرات مطلع خواهد شد
                            </li>
                        </ul>
                    </div>

                    <div class="security-tips">
                        <h5>
                            <i class="bi bi-shield-exclamation"></i>
                            نکات مهم
                        </h5>
                        <div class="tip-item">
                            <i class="bi bi-lightbulb"></i>
                            <span>تغییر نقش کاربر بر دسترسی‌های فعلی تأثیر می‌گذارد</span>
                        </div>
                        <div class="tip-item">
                            <i class="bi bi-lightbulb"></i>
                            <span>در صورت تغییر رمز، کاربر باید مجدد وارد سیستم شود</span>
                        </div>
                        <div class="tip-item">
                            <i class="bi bi-lightbulb"></i>
                            <span>تغییرات را قبل از ذخیره بررسی کنید</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Role selection effect
            const roleSelect = document.querySelector('select[name="Role"]');
            if (roleSelect) {
                roleSelect.addEventListener('change', function() {
                    const selectedRole = this.value;
                    highlightSelectedRole(selectedRole);
                });
            }
            
            // Password fields toggle effect
            const passwordInputs = document.querySelectorAll('input[type="password"]');
            passwordInputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                input.addEventListener('blur', function() {
                    if (!this.value) {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });
            
            function highlightSelectedRole(role) {
                document.querySelectorAll('.role-info').forEach(info => {
                    info.classList.remove('active');
                });
                
                const selectedInfo = document.querySelector(`.role-info.role-${role.toLowerCase()}`);
                if (selectedInfo) {
                    selectedInfo.classList.add('active');
                }
            }
            
            // Set initial role highlight
            highlightSelectedRole('@Model.Role');
            
            // Form validation enhancement
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const password = document.querySelector('input[name="Password"]').value;
                const confirmPassword = document.querySelector('input[name="ConfirmPassword"]').value;
                
                if (password && password !== confirmPassword) {
                    e.preventDefault();
                    showToast('خطا', 'رمز عبور و تأیید آن مطابقت ندارند', 'error');
                }
            });
            
            function showToast(title, message, type) {
                // Simple toast notification
                const toast = document.createElement('div');
                toast.className = `alert alert-${type === 'error' ? 'danger' : 'success'} alert-dismissible fade show`;
                toast.innerHTML = `
                    <strong>${title}</strong> ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.querySelector('.dashboard-container').prepend(toast);
            }
        });
    </script>
}

<style>
    /* User Summary Card */
    .user-summary-card {
        background: var(--white);
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--border-color);
        margin-bottom: 20px;
    }

    .user-avatar-large {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto 15px;
        border: 3px solid var(--accent-gold);
    }

    .avatar-img-large {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .avatar-placeholder-large {
        width: 100%;
        height: 100%;
        background: var(--light-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-light);
        font-size: 2rem;
    }

    .user-summary-card h4 {
        color: var(--primary-blue);
        margin-bottom: 15px;
        font-weight: 700;
    }

    .user-details-summary {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 0.9rem;
        color: var(--text-dark);
    }

    .detail-item i {
        color: var(--accent-gold);
        width: 16px;
    }

    .role-badge-summary {
        padding: 4px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .role-badge-summary.role-user {
        background: rgba(25, 135, 84, 0.1);
        color: #198754;
    }

    .role-badge-summary.role-admin {
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }

    /* Optional Field Styling */
    .form-group:has(input[placeholder*="اختیاری"]) {
        position: relative;
    }

    .form-group:has(input[placeholder*="اختیاری"]) .form-label::after {
        content: "(اختیاری)";
        color: var(--text-light);
        font-size: 0.8rem;
        font-weight: normal;
        margin-right: 5px;
    }

    /* Alert Styling */
    .alert {
        border-radius: 10px;
        border: none;
        padding: 15px;
        margin-bottom: 20px;
    }

    .alert-info {
        background: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
        border-left: 4px solid #0d6efd;
    }

    .alert i {
        margin-left: 5px;
    }

    /* Focus effects for password fields */
    .form-group.focused {
        position: relative;
    }

    .form-group.focused::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        border: 2px solid var(--accent-gold);
        border-radius: 10px;
        pointer-events: none;
        opacity: 0.1;
    }

    /* Badge styling */
    .badge {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-start;
        padding: 20px 0;
        border-top: 1px solid var(--border-color);
        margin-top: 20px;
    }

    /* Role Descriptions */
    .role-descriptions {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .role-info {
        padding: 15px;
        border-radius: 10px;
        border: 2px solid var(--border-color);
        transition: all 0.3s ease;
        background: var(--light-bg);
    }

    .role-info.active {
        border-color: var(--accent-gold);
        background: rgba(212, 166, 55, 0.05);
    }

    .role-info h6 {
        color: var(--primary-blue);
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .role-info p {
        font-size: 0.85rem;
        color: var(--text-light);
        margin: 0;
        line-height: 1.5;
    }

    .role-user.active {
        border-color: #198754;
        background: rgba(25, 135, 84, 0.05);
    }

    .role-admin.active {
        border-color: #dc3545;
        background: rgba(220, 53, 69, 0.05);
    }

    /* Help Section */
    .help-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
        position: sticky;
        top: 20px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .form-actions {
            flex-direction: column;
        }
        
        .form-actions .submit-btn,
        .form-actions .btn-outline-custom {
            width: 100%;
            justify-content: center;
        }
        
        .help-section {
            position: static;
            margin-top: 30px;
        }
        
        .user-summary-card {
            text-align: right;
        }
        
        .detail-item {
            justify-content: flex-start;
        }
    }

    @@media (max-width: 480px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
        
        .role-descriptions {
            gap: 8px;
        }
        
        .role-info {
            padding: 12px;
        }
    }
</style>