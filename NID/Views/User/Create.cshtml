@model NID.ViewModel.CreateUserViewModel
@{
    ViewData["Title"] = "ایجاد حساب کاربری";
}

<div class="dashboard-container">
    <!-- Header Section -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">ایجاد حساب کاربری جدید</h1>
            <p class="page-subtitle">افزودن کاربر جدید به سیستم مدیریت</p>
        </div>
    </div>

    <!-- Registration Card -->
    <div class="registration-card">
        <div class="row">
            <!-- Form Section -->
            <div class="col-lg-8">
                <form asp-action="Create" method="post" novalidate class="needs-validation">
                    <div class="section-card mb-4">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="bi bi-person-badge"></i>
                            </div>
                            <h3 class="section-title">اطلاعات کاربر</h3>
                        </div>

                        <div class="form-grid">
                            <div class="form-group">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="bi bi-person"></i>
                                    نام
                                    <span class="required-star">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="نام کاربر را وارد کنید" />
                                <span asp-validation-for="FirstName" class="validation-message"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName" class="form-label">
                                    <i class="bi bi-person"></i>
                                    نام خانوادگی
                                    <span class="required-star">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی کاربر را وارد کنید" />
                                <span asp-validation-for="LastName" class="validation-message"></span>
                            </div>
                        </div>
                    </div>

                    <div class="section-card mb-4">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                            <h3 class="section-title">اطلاعات ورود</h3>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i>
                                آدرس ایمیل
                                <span class="required-star">*</span>
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="example@domain.com" />
                            <span asp-validation-for="Email" class="validation-message"></span>
                        </div>

                        <div class="form-grid">
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-key"></i>
                                    رمز عبور
                                    <span class="required-star">*</span>
                                </label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="رمز عبور قوی وارد کنید" />
                                <span asp-validation-for="Password" class="validation-message"></span>
                                <div class="help-text">
                                    <small>رمز عبور باید حداقل 6 کاراکتر و شامل حروف و اعداد باشد</small>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="bi bi-key-fill"></i>
                                    تأیید رمز عبور
                                    <span class="required-star">*</span>
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="تکرار رمز عبور" />
                                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                            </div>
                        </div>
                    </div>

                    <div class="section-card mb-4">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="bi bi-person-gear"></i>
                            </div>
                            <h3 class="section-title">سطوح دسترسی</h3>
                        </div>

                        <div class="form-group">
                            <label asp-for="Role" class="form-label">
                                <i class="bi bi-award"></i>
                                نقش کاربری
                                <span class="required-star">*</span>
                            </label>
                            <select asp-for="Role" class="form-control">
                                <option value="">-- انتخاب نقش --</option>
                                <option value="User">👤 کاربر عادی</option>
                                <option value="Admin">🛡️ مدیر سیستم</option>
                            </select>
                            <span asp-validation-for="Role" class="validation-message"></span>
                            
                            <div class="role-descriptions mt-3">
                                <div class="role-info role-user">
                                    <h6><i class="bi bi-person"></i> کاربر عادی</h6>
                                    <p>دسترسی به امکانات پایه سیستم - مشاهده و مدیریت اطلاعات معمول</p>
                                </div>
                                <div class="role-info role-admin">
                                    <h6><i class="bi bi-shield-check"></i> مدیر سیستم</h6>
                                    <p>دسترسی کامل به تمام بخش‌های سیستم - مدیریت کاربران و تنظیمات</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="submit-btn">
                            <i class="bi bi-person-plus"></i>
                            ایجاد حساب کاربری
                        </button>
                        <a href="@Url.Action("List", "User")" class="btn-outline-custom">
                            <i class="bi bi-arrow-right"></i>
                            بازگشت به لیست
                        </a>
                    </div>
                </form>
            </div>

            <!-- Help Section -->
            <div class="col-lg-4">
                <div class="help-section">
                    <div class="help-card">
                        <div class="help-icon">
                            <i class="bi bi-info-circle"></i>
                        </div>
                        <h4>راهنمای ایجاد کاربر</h4>
                        <ul class="help-list">
                            <li>
                                <i class="bi bi-check-circle"></i>
                                اطلاعات کاربر باید به صورت کامل و صحیح وارد شود
                            </li>
                            <li>
                                <i class="bi bi-check-circle"></i>
                                ایمیل باید منحصر به فرد و معتبر باشد
                            </li>
                            <li>
                                <i class="bi bi-check-circle"></i>
                                رمز عبور باید قوی و حداقل 6 کاراکتر باشد
                            </li>
                            <li>
                                <i class="bi bi-check-circle"></i>
                                نقش کاربر را با دقت انتخاب کنید
                            </li>
                            <li>
                                <i class="bi bi-check-circle"></i>
                                کاربر پس از ایجاد می‌تواند اطلاعات خود را ویرایش کند
                            </li>
                        </ul>
                    </div>

                    <div class="security-tips">
                        <h5>
                            <i class="bi bi-shield-check"></i>
                            نکات امنیتی
                        </h5>
                        <div class="tip-item">
                            <i class="bi bi-lightbulb"></i>
                            <span>رمز عبور پیشفرض را به کاربر اعلام کنید</span>
                        </div>
                        <div class="tip-item">
                            <i class="bi bi-lightbulb"></i>
                            <span>از کاربر بخواهید پس از اولین ورود رمز عبور را تغییر دهد</span>
                        </div>
                        <div class="tip-item">
                            <i class="bi bi-lightbulb"></i>
                            <span>دسترسی مدیران را تنها به افراد مورد اعتماد بدهید</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Real-time password strength indicator
            const passwordInput = document.querySelector('input[type="password"]');
            const confirmPasswordInput = document.querySelectorAll('input[type="password"]')[1];
            
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    const strengthIndicator = document.getElementById('password-strength') || createStrengthIndicator();
                    
                    const strength = calculatePasswordStrength(password);
                    updateStrengthIndicator(strengthIndicator, strength);
                });
            }
            
            // Role selection effect
            const roleSelect = document.querySelector('select[name="Role"]');
            if (roleSelect) {
                roleSelect.addEventListener('change', function() {
                    const selectedRole = this.value;
                    highlightSelectedRole(selectedRole);
                });
                
                // Initial highlight
                highlightSelectedRole(roleSelect.value);
            }
            
            function createStrengthIndicator() {
                const indicator = document.createElement('div');
                indicator.id = 'password-strength';
                indicator.className = 'password-strength';
                passwordInput.parentNode.appendChild(indicator);
                return indicator;
            }
            
            function calculatePasswordStrength(password) {
                let strength = 0;
                if (password.length >= 6) strength++;
                if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
                if (password.match(/\d/)) strength++;
                if (password.match(/[^a-zA-Z\d]/)) strength++;
                return strength;
            }
            
            function updateStrengthIndicator(indicator, strength) {
                const levels = ['خیلی ضعیف', 'ضعیف', 'متوسط', 'قوی', 'خیلی قوی'];
                const colors = ['#dc3545', '#fd7e14', '#ffc107', '#20c997', '#198754'];
                
                indicator.innerHTML = `
                    <div class="strength-bar">
                        <div class="strength-level" style="width: ${strength * 25}%; background: ${colors[strength]}"></div>
                    </div>
                    <small style="color: ${colors[strength]}">سطح امنیت: ${levels[strength]}</small>
                `;
            }
            
            function highlightSelectedRole(role) {
                document.querySelectorAll('.role-info').forEach(info => {
                    info.classList.remove('active');
                });
                
                const selectedInfo = document.querySelector(`.role-info.role-${role.toLowerCase()}`);
                if (selectedInfo) {
                    selectedInfo.classList.add('active');
                }
            }
        });
    </script>
}

<style>
    /* Form Specific Styles */
    .needs-validation .form-control:invalid {
        border-color: var(--error-red);
    }

    .needs-validation .form-control:valid {
        border-color: var(--success-green);
    }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-start;
        padding: 20px 0;
        border-top: 1px solid var(--border-color);
        margin-top: 20px;
    }

    /* Role Descriptions */
    .role-descriptions {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .role-info {
        padding: 15px;
        border-radius: 10px;
        border: 2px solid var(--border-color);
        transition: all 0.3s ease;
        background: var(--light-bg);
    }

    .role-info.active {
        border-color: var(--accent-gold);
        background: rgba(212, 166, 55, 0.05);
    }

    .role-info h6 {
        color: var(--primary-blue);
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .role-info p {
        font-size: 0.85rem;
        color: var(--text-light);
        margin: 0;
        line-height: 1.5;
    }

    .role-user.active {
        border-color: #198754;
        background: rgba(25, 135, 84, 0.05);
    }

    .role-admin.active {
        border-color: #dc3545;
        background: rgba(220, 53, 69, 0.05);
    }

    /* Help Section */
    .help-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
        position: sticky;
        top: 20px;
    }

    .help-card {
        background: var(--white);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--border-color);
    }

    .help-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-blue) 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        margin-bottom: 15px;
    }

    .help-card h4 {
        color: var(--primary-blue);
        margin-bottom: 15px;
        font-weight: 700;
    }

    .help-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .help-list li {
        display: flex;
        align-items: start;
        gap: 10px;
        margin-bottom: 12px;
        font-size: 0.9rem;
        color: var(--text-dark);
        line-height: 1.5;
    }

    .help-list li:last-child {
        margin-bottom: 0;
    }

    .help-list li i {
        color: var(--success-green);
        font-size: 1rem;
        margin-top: 2px;
        flex-shrink: 0;
    }

    /* Security Tips */
    .security-tips {
        background: var(--white);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--border-color);
    }

    .security-tips h5 {
        color: var(--primary-blue);
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
    }

    .tip-item {
        display: flex;
        align-items: start;
        gap: 10px;
        margin-bottom: 10px;
        font-size: 0.85rem;
        color: var(--text-light);
    }

    .tip-item:last-child {
        margin-bottom: 0;
    }

    .tip-item i {
        color: var(--accent-gold);
        font-size: 0.9rem;
        margin-top: 2px;
        flex-shrink: 0;
    }

    /* Password Strength Indicator */
    .password-strength {
        margin-top: 8px;
    }

    .strength-bar {
        width: 100%;
        height: 4px;
        background: var(--border-color);
        border-radius: 2px;
        overflow: hidden;
        margin-bottom: 5px;
    }

    .strength-level {
        height: 100%;
        transition: all 0.3s ease;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .form-actions {
            flex-direction: column;
        }
        
        .form-actions .submit-btn,
        .form-actions .btn-outline-custom {
            width: 100%;
            justify-content: center;
        }
        
        .help-section {
            position: static;
            margin-top: 30px;
        }
    }

    @@media (max-width: 480px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
        
        .role-descriptions {
            gap: 8px;
        }
        
        .role-info {
            padding: 12px;
        }
    }
</style>