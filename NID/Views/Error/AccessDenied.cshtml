@{
    ViewData["Title"] = "دسترسی غیرمجاز";
}

<div class="error-container">
    <div class="error-content text-center">
        <div class="error-icon">
            <i class="bi bi-shield-exclamation"></i>
        </div>
        <h1 class="error-title">۴۰۳</h1>
        <h2 class="error-subtitle">دسترسی غیرمجاز</h2>
        
        <p class="error-description">
            متأسفیم، شما دسترسی لازم برای مشاهده این صفحه را ندارید.
        </p>
        
        <div class="error-actions">
            <a href="/" class="btn btn-primary">
                <i class="bi bi-house"></i>
                بازگشت به صفحه اصلی
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-right"></i>
                بازگشت به صفحه قبل
            </a>
            @if (!User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                    <i class="bi bi-box-arrow-in-right"></i>
                    ورود به سیستم
                </a>
            }
        </div>
    </div>
</div>