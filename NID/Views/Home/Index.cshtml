@{
    ViewData["Title"] = "صفحه اصلی";
}
<!-- سکشن اصلی -->
<section class="hero">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">به تذکره آنلاین خوش آمدید</h1>
        <p class="lead mb-4">سیستمی امن و سریع برای مدیریت اطلاعات هویتی شهروندان افغانستان</p>
        <a href="#contact" class="btn btn-primary btn-lg me-2">ثبت‌نام کنید</a>
        <a href="#features" class="btn btn-outline-light btn-lg">مشاهده ویژگی‌ها</a>
    </div>
</section>

<!-- ویژگی‌ها -->
<section id="features" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">ویژگی‌های سیستم</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 text-center p-4 card-hover">
                    <i class="bi bi-shield-lock feature-icon mb-3"></i>
                    <div class="card-body">
                        <h5 class="card-title">امنیت بالا</h5>
                        <p class="card-text">اطلاعات شخصی شما با بالاترین استانداردهای امنیتی حفاظت می‌شود.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center p-4 card-hover">
                    <i class="bi bi-clock-history feature-icon mb-3"></i>
                    <div class="card-body">
                        <h5 class="card-title">دسترسی سریع</h5>
                        <p class="card-text">دسترسی آسان به خدمات و اطلاعات هویتی در هر زمان و مکان.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center p-4 card-hover">
                    <i class="bi bi-people feature-icon mb-3"></i>
                    <div class="card-body">
                        <h5 class="card-title">شفافیت و قابلیت پیگیری</h5>
                        <p class="card-text">فرآیندها به‌صورت شفاف و قابل پیگیری برای کاربران و اداره ملی احصاییه است.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- درباره ما -->
<section id="about" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">درباره تذکره آنلاین</h2>
        <p class="text-center mx-auto" style="max-width: 700px;">
            سیستم تذکره آنلاین اداره ملی احصاییه و معلومات، بستری امن و سریع برای مدیریت و ارائه اطلاعات هویتی شهروندان افغانستان فراهم می‌کند. هدف ما سهولت دسترسی به اطلاعات، کاهش کاغذبازی، و ارتقای شفافیت در خدمات دولتی است.
        </p>
        <div class="text-center mt-4">
            <img src="https://picsum.photos/800/400" class="img-fluid rounded shadow" alt="درباره ما">
        </div>
    </div>
</section>

<!-- تماس با ما -->
<section id="contact" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">تماس با ما</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form>
                    <div class="mb-3">
                        <label class="form-label">نام</label>
                        <input type="text" class="form-control" placeholder="نام خود را وارد کنید" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">ایمیل</label>
                        <input type="email" class="form-control" placeholder="ایمیل خود را وارد کنید" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">پیام</label>
                        <textarea rows="4" class="form-control" placeholder="پیام خود را بنویسید"></textarea>
                    </div>
                    <button class="btn btn-primary w-100">ارسال</button>
                </form>
            </div>
        </div>
    </div>
</section>
