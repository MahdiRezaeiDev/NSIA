@model List<NID.Models.Family>
@{
    ViewData["Title"] = "خانواده من";
}

<div class="main-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">جستجوی خانواده</h1>
            <p class="page-subtitle">
                برای مشاهده و مدیریت اطلاعات خانواده خود، کد خانواده را وارد کنید
            </p>
        </div>
    </div>

    <!-- Search Section -->
    <div class="search-section fade-in-up">
        <div class="search-icon">
            <i class="fas fa-search"></i>
        </div>
        <h2 class="search-title">جستجو با کد خانواده</h2>
        <p class="search-description">
            کد خانواده منحصر به فردی که در زمان ثبت‌نام دریافت کرده‌اید را وارد کنید
        </p>
        
        <form id="searchForm" method="get" action="@Url.Action("MyFamilies", "Home")">
            <div class="search-form">
                <div class="form-group">
                    <label class="form-label">کد خانواده</label>
                    <input type="text" name="familyCode" class="form-control" 
                           placeholder="مثال: FAM-20241225-1234" 
                           value="@Context.Request.Query["familyCode"]"
                           pattern="FAM-\d{8}-\d{4}"
                           title="کد خانواده باید به صورت FAM-20241225-1234 باشد"
                           required>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i>
                        جستجو
                    </button>
                </div>
            </div>
        </form>

        <div class="help-text">
            <strong>راهنما:</strong> کد خانواده در زمان ثبت‌نام به شما ارائه شده است. 
            اگر کد خود را گم کرده‌اید، با پشتیبانی تماس بگیرید.
        </div>
    </div>

    <!-- Results Section -->
    @if (Model.Any())
    {
        <div class="results-section fade-in-up">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-check-circle section-icon"></i>
                    خانواده یافت شد
                </h2>
            </div>

            @foreach (var family in Model)
            {
                <div class="family-card fade-in-up">
                    <div class="family-header">
                        <div class="family-info">
                            <h3 class="family-name">@family.FamilyName</h3>
                            <span class="family-code">@family.FamilyCode</span>
                        </div>
                        <div class="family-actions">
                            <a href="@Url.Action("EditFamilyForm", "Registration", new { id = family.Id })" class="action-btn edit-btn">
                                <i class="fas fa-edit"></i>
                                ویرایش
                            </a>
                            <a href="@Url.Action("FamilyDetails", "Registration", new { id = family.Id })" class="action-btn view-btn">
                                <i class="fas fa-eye"></i>
                                مشاهده
                            </a>
                        </div>
                    </div>

                    <div class="members-list">
                        <h4 class="members-title">
                            <i class="fas fa-user-friends"></i>
                            اعضای خانواده (@family.Members.Count نفر)
                        </h4>
                        @foreach (var member in family.Members.Take(5))
                        {
                            <div class="member-item">
                                <span class="member-name">@member.FirstName @member.LastName</span>
                                <span class="member-relationship">@GetRelationshipText(member.Relationship)</span>
                            </div>
                        }
                        @if (family.Members.Count > 5)
                        {
                            <div class="member-item">
                                <span class="member-name">و @(family.Members.Count - 5) عضو دیگر</span>
                            </div>
                        }
                    </div>

                    <div class="family-footer">
                        <div class="family-meta">
                            <div class="meta-item">
                                <i class="fas fa-calendar meta-icon"></i>
                                ثبت شده در: @family.CreatedDate.ToString("yyyy/MM/dd")
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-users meta-icon"></i>
                                @family.Members.Count عضو
                            </div>
                        </div>
                        <a href="@Url.Action("ExportFamilyPdf", "Registration", new { id = family.Id })" class="action-btn view-btn" target="_blank">
                            <i class="fas fa-download"></i>
                            دریافت PDF
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrEmpty(Context.Request.Query["familyCode"]))
    {
        <div class="empty-state fade-in-up">
            <div class="empty-icon">
                <i class="fas fa-search"></i>
            </div>
            <h3 class="empty-title">خانواده‌ای یافت نشد</h3>
            <p class="empty-description">
                خانواده‌ای با کد <strong>@Context.Request.Query["familyCode"]</strong> پیدا نشد.
            </p>
            <div class="help-text">
                <strong>علل احتمالی:</strong>
                <br>• کد خانواده را اشتباه وارد کرده‌اید
                <br>• خانواده با این کد وجود ندارد
                <br>• اطلاعات وارد شده با فرمت صحیح مطابقت ندارد
                <br>
                <br><strong>فرمت صحیح:</strong> 
                <div class="code-example">FAM-20241225-1234</div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state fade-in-up">
            <div class="empty-icon">
                <i class="fas fa-home"></i>
            </div>
            <h3 class="empty-title">خانواده خود را جستجو کنید</h3>
            <p class="empty-description">
                برای مشاهده اطلاعات خانواده، لطفاً کد خانواده خود را در قسمت بالا وارد کنید.
            </p>
            <div class="help-text">
                <strong>نکته:</strong> هر کاربر فقط می‌تواند خانواده‌ای که خودش ثبت‌نام کرده را مشاهده و مدیریت کند.
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function resetSearch() {
            document.getElementById('searchForm').reset();
            window.location.href = '@Url.Action("MyFamilies", "Home")';
        }

        // Add loading state to search form
        document.getElementById('searchForm').addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال جستجو...';
        });

        // Format family code input
        document.querySelector('input[name="familyCode"]').addEventListener('input', function(e) {
            let value = e.target.value.toUpperCase();
            value = value.replace(/[^A-Z0-9\-]/g, '');
            e.target.value = value;
        });

        // Add animation to cards
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in-up').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });
    </script>
}

@functions {
    public string GetRelationshipText(FamilyRelationship relationship)
    {
        switch (relationship)
        {
            case FamilyRelationship.Self: return "فرد اصلی";
            case FamilyRelationship.Husband: return "شوهر";
            case FamilyRelationship.Wife: return "همسر";
            case FamilyRelationship.Son: return "پسر";
            case FamilyRelationship.Daughter: return "دختر";
            case FamilyRelationship.Other: return "سایر";
            default: return "نامشخص";
        }
    }
}