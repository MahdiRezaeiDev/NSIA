<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - اداره ملی احصائیه</title>

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NID.styles.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="admin-layout">
<!-- Navbar -->
<nav class="navbar navbar-custom">
    <div class="container-fluid">
        <!-- Sidebar Toggle for Mobile -->
        <button class="sidebar-toggle" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Brand -->
        <div class="navbar-brand-custom">
            <i class="fas fa-id-card navbar-brand-icon"></i>
            سیستم تذکره الکترونیکی
        </div>

        <!-- User Info and Actions -->
        <div class="user-info">
            <div class="user-avatar">
                <i class="fas fa-user"></i>
            </div>
            <div class="user-details">
                <span class="user-name">نام کاربر</span>
                <span class="user-role">مدیر سیستم</span>
            </div>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    خروج
                </button>
            </form>
        </div>
    </div>
</nav>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <h3 class="sidebar-title">پنل مدیریت</h3>
        <div class="sidebar-subtitle">اداره ملی احصائیه</div>
    </div>

    <nav class="sidebar-nav">
        <a asp-controller="Admin" asp-action="Index" class="sidebar-item">
            <i class="fas fa-tachometer-alt sidebar-icon"></i>
            <span class="sidebar-text">داشبورد</span>
        </a>

        <a asp-controller="User" asp-action="Index" class="sidebar-item">
            <i class="fas fa-users sidebar-icon"></i>
            <span class="sidebar-text">مدیریت کاربران</span>
            <span class="sidebar-badge">۱۲</span>
        </a>

        <a asp-controller="Registration" asp-action="Create" class="sidebar-item">
            <i class="fas fa-user-plus sidebar-icon"></i>
            <span class="sidebar-text">ثبت خانواده جدید</span>
        </a>

        <a asp-controller="Registration" asp-action="ListFamilies" class="sidebar-item">
            <i class="fas fa-list-alt sidebar-icon"></i>
            <span class="sidebar-text">لیست خانواده‌ها</span>
            <span class="sidebar-badge">۸۹۳</span>
        </a>

        <a asp-controller="Home" asp-action="MyFamilies" class="sidebar-item">
            <i class="fas fa-search sidebar-icon"></i>
            <span class="sidebar-text">جستجوی خانواده</span>
        </a>

        <a href="#" class="sidebar-item">
            <i class="fas fa-chart-bar sidebar-icon"></i>
            <span class="sidebar-text">گزارش‌ها و آمار</span>
        </a>

        <a href="#" class="sidebar-item">
            <i class="fas fa-cogs sidebar-icon"></i>
            <span class="sidebar-text">تنظیمات سیستم</span>
        </a>
    </nav>
</div>

<!-- Main Content -->
<div class="main-content" id="mainContent">
    <!-- Page Content -->
    <main role="main" class="fade-in">
        @RenderBody()
    </main>
</div>

<!-- Toast Notifications -->
<div class="toast-container-custom">
    @if (TempData["SuccessMessage"] != null)
    {
    <div class="toast toast-custom toast-success show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header-custom">
            <div class="toast-icon">
                <i class="fas fa-check"></i>
            </div>
            <strong class="toast-title">موفقیت</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body-custom">
            @TempData["SuccessMessage"]
        </div>
    </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="toast toast-custom toast-error show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header-custom">
            <div class="toast-icon">
                <i class="fas fa-exclamation"></i>
            </div>
            <strong class="toast-title">خطا</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body-custom">
            @TempData["ErrorMessage"]
        </div>
    </div>
    }
</div>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    // Sidebar Toggle for Mobile
    document.getElementById('sidebarToggle').addEventListener('click', function() {
        document.getElementById('sidebar').classList.toggle('open');
    });

    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', function(event) {
        const sidebar = document.getElementById('sidebar');
        const toggle = document.getElementById('sidebarToggle');
        const isClickInsideSidebar = sidebar.contains(event.target);
        const isClickOnToggle = toggle.contains(event.target);

        if (window.innerWidth <= 768 && !isClickInsideSidebar && !isClickOnToggle) {
            sidebar.classList.remove('open');
        }
    });

    // Auto-hide toasts
    document.addEventListener('DOMContentLoaded', function() {
        const toasts = document.querySelectorAll('.toast');
        toasts.forEach(toast => {
            const bsToast = new bootstrap.Toast(toast, { delay: 5000 });
            bsToast.show();
        });
    });

    // Active link highlighting
    document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname;
        const sidebarItems = document.querySelectorAll('.sidebar-item');

        sidebarItems.forEach(item => {
            if (item.getAttribute('href') === currentPath) {
                item.classList.add('active');
            }
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>