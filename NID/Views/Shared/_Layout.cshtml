        padding: 60px 0 40px;
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 40px;
        align-items: start;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .footer-logo {
        width: 70px;
        height: 70px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: var(--accent-gold);
    }

    .footer-brand-text h4 {
        font-size: 1.4rem;
